.container.user-page
  %header.user-nav
    .media
      .media-left
        = link_to image_tag(@user.avatar, alt: "64x64", class: "media-object", style: "width: 64px; height: 64px;"), user_path(@user.id)
      .media-body
        %h4#top-aligned-media.media-heading
          = @user.username
          %span.label.label-default.project-number
            / アソシエーション設定後@user.prototype.lengthなどでprototype数を表示
            29
            %i Projects
        .proto-user
          %span.degree
            = @user.member
        .row
          .col-md-6
            %h4 Profile
            %p
              = @user.profile
          .col-md-6
            %h4 Works
            %p
              = @user.works
.container.proto-list
  .row
    .col-sm-4.col-md-3.proto-content
      .thumbnail
        %a{ href: "" }
          = image_tag("sample.png")
          .caption
            %h3 Salvation Army on iPad App Wireframe
            .proto-meta
              .proto-date
                Apr 26
            %ul.proto-tag-list.list-inline
              %li
                %a{ href: "#", class: "btn btn-default" } iPad
              %li
                %a{ href: "#", class: "btn btn-default" } wireframe
.text-center
  %ul.pagination
    %li.disabled
      %a{ "aria-label": "Previous", href: "#" }
        %span{ "aria-hidden": "true" } «
    %li.active
      %a{ href: "#" }
        1
        %span.sr-only (current)
    %li
      %a{ href: "#" } 2
    %li
      %a{ href: "#" } 3
    %li
      %a{ href: "#" } 4
    %li
      %a{ href: "#" } 5
    %li
      %a{ "aria-label": "Next", href: "#" }
        %span{ "aria-hidden": "true" } »
